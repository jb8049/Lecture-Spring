<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Hello hello = new Hello() bean태그 하나가 이렇게 인스턴스 객체를 생성-->
	<!-- hello라는 객체를 한 개 더 만들고 싶으면, bean하나 더 추가해야함  -->
	<!-- bean 하나 당 객체 하나가 만들어진다 -->
	<bean class="basic.Hello" id="hello" />
	<!--lazy-init="true" 객체를 생성하는 시점을 언제로 잡을 것이냐의 문제, 호출할 때 생성한다, 필요할 때 만들어줌.. 그런데 이거 우리가 사용할 일은 없을듯 -->
	<bean class="basic.Hello" id="hello2" lazy-init="true"/>

</beans>

